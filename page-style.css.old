body {
  /*margin-top: 1px;*/
  /*margin:0px;
  height:100%;
  width:100%;*/
  margin-left: auto;
  margin-right: auto;
  background-image:url('./images/scuro.png');
  font-family: Helvetica, Arial, FreeSans, san-serif;
  color: #000000;
}

H1 {
  font-style:normal; 
  margin:0px;
  text-shadow: 0 2px 0 #fff;
}

div.description {
  font-size:1.2em; 
  font-style:italic;
  width:350px;
  padding:0px;
  position:absolute;
  padding:10px;
  margin:0px auto;
  left:25%;
  right:25%;
}

div.social {
  width:130px;
  text-align:center;
  top:500px;
  left:0px;
  right:10px;
  padding:0px;
  margin:0px;
  position:absolute;
  border:2px;
  padding:10px;
  margin:20px;
}

a.link:link,a.link:visited {
  display:block;
  height:40px;
  width:195px;
  font-weight:bold;
  text-shadow: 0 2px 0 #fff;
  color:#000000;
  background-image:url('./images/scuro.png');
  text-decoration:none;
  text-transform:uppercase;
  border:1px solid black;
  margin:2px;
}

a.link:hover,a.link:active {
  background-image:url('./images/chiaro.png');
}

a.link {
  border-top-left-radius:4px;
  border-top-right-radius:4px;
  border-bottom-left-radius:4px;
  border-bottom-right-radius:4px;
  line-height:40px; /*Centers the menu link texts vertically on all browsers*/
  text-align:center;
}

ul {
  list-style-type:none;
  text-decoration:none;
  position:absolute;
  top:150px;
  left:-15px;
  margin:0px;
}

#frame {
  position:relative;
  top:150px;
  left:265px;
  border:0;
  margin-left:0px;
  width:79%;
  overflow: hidden;
  /*overflow-x: hidden*/
}
